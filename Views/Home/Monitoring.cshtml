@{
    ViewBag.Title = "Monitoring";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Monitoring</h2>
                </div>
                <div class="card-body">
                    <p class="lead text-center mb-4">Select a monitoring category:</p>
                    
                    <div class="row g-4 justify-content-center">
                        <div class="col-md-5">
                            <a href="@Url.Action("EnvironmentMonitoring", "Home")" class="btn btn-success btn-lg w-100 py-4">
                                <i class="bi bi-tree-fill d-block mb-2" style="font-size: 2rem;"></i>
                                Environment
                            </a>
                        </div>
                        <div class="col-md-5">
                            <a href="@Url.Action("SafetyHealthMonitoring", "Home")" class="btn btn-warning btn-lg w-100 py-4">
                                <i class="bi bi-shield-check d-block mb-2" style="font-size: 2rem;"></i>
                                Safety &amp; Health
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

