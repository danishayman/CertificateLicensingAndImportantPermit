@model CLIP.Models.MonitoringModule

@{
    ViewBag.Title = "Create Monitoring Module";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Create Monitoring Module</h2>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.Category, new { @class = "col-md-4 col-form-label" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter monitoring category name" } })
                                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                @Html.LabelFor(model => model.Type, new { @class = "col-md-4 col-form-label" })
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.Type, ViewBag.Types as List<SelectListItem>, new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <div class="offset-md-4 col-md-8">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Create
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 