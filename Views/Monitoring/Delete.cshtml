@model CLIP.Models.MonitoringModule

@{
    ViewBag.Title = "Delete Monitoring Module";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Delete Monitoring Module</h2>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Are you sure you want to delete this?</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-md-4">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-md-8">@Html.DisplayFor(model => model.Category)</dd>

                        <dt class="col-md-4">@Html.DisplayNameFor(model => model.Type)</dt>
                        <dd class="col-md-8">@Html.DisplayFor(model => model.Type)</dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row mt-4">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 