@model IEnumerable<CLIP.Models.Monitoring>

@{
    ViewBag.Title = "Monitoring Types";
}

<h2>Monitoring Types</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MonitoringName)</th>
                <th>@Html.DisplayNameFor(model => model.MonitoringCategory)</th>
                <th>@Html.DisplayNameFor(model => model.MonitoringFreq)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MonitoringName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonitoringCategory)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonitoringFreq)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MonitoringID }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = item.MonitoringID }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.MonitoringID }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />
<div>
    @Html.ActionLink("Back to Monitoring Dashboard", "Index", "PlantMonitoring", null, new { @class = "btn btn-default" })
</div> 