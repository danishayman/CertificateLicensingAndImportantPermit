@model IEnumerable<CLIP.Models.Monitoring>

@{
    ViewBag.Title = "Monitoring Types";
}

<h2>Monitoring Types</h2>

<div class="row mb-3">
    <div class="col-md-12">
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Monitoring Type
            </a>
        }
        <a href="@Url.Action("Index", "PlantMonitoring")" class="btn btn-primary">
            View Monitoring Records
        </a>
        <a href="@Url.Action("Schedule", "PlantMonitoring")" class="btn btn-info">
            <i class="fas fa-calendar-alt"></i> View Schedule
        </a>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.MonitoringName)</th>
                <th>@Html.DisplayNameFor(model => model.MonitoringCategory)</th>
                <th>@Html.DisplayNameFor(model => model.MonitoringFreq)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MonitoringName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonitoringCategory)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonitoringFreq)</td>
                    <td>
                        <div class="btn-group">
                            <a href="@Url.Action("Details", new { id = item.MonitoringID })" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Edit", new { id = item.MonitoringID })" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MonitoringID })" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />
<div>
    @Html.ActionLink("Back to Monitoring Dashboard", "Index", "PlantMonitoring", null, new { @class = "btn btn-default" })
</div> 