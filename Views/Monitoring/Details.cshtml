@model CLIP.Models.MonitoringModule

@{
    ViewBag.Title = "Monitoring Module Details";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Monitoring Module Details</h2>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-md-4">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-md-8">@Html.DisplayFor(model => model.Category)</dd>

                        <dt class="col-md-4">@Html.DisplayNameFor(model => model.Type)</dt>
                        <dd class="col-md-8">@Html.DisplayFor(model => model.Type)</dd>
                    </dl>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 