@model IEnumerable<CLIP.Models.PlantMonitoring>

@{
    ViewBag.Title = "Monitoring Records";
}

<h2>Monitoring Dashboard</h2>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="btn-group">
            @Html.ActionLink("List View", "Index", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Schedule View", "Schedule", null, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Manage Monitoring Types", "Index", "Monitoring", null, new { @class = "btn btn-outline-secondary" })
        </div>
        <a href="@Url.Action("Create")" class="btn btn-success float-right">
            <i class="fas fa-plus"></i> Add New Record
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>Filters</h5>
    </div>
    <div class="card-body">
        <form method="get" class="form-inline">
            <div class="form-group mb-2 mr-2">
                <label for="category" class="mr-2">Category:</label>
                <select name="category" id="category" class="form-control">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category" @(ViewBag.SelectedCategory == category ? "selected" : "")>@category</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2 mr-2">
                <label for="plantId" class="mr-2">Plant:</label>
                <select name="plantId" id="plantId" class="form-control">
                    <option value="">All Plants</option>
                    @foreach (var plant in ViewBag.Plants)
                    {
                        <option value="@plant.Id" @(ViewBag.SelectedPlantId == plant.Id ? "selected" : "")>@plant.PlantName</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2 mr-2">
                <label for="status" class="mr-2">Status:</label>
                <select name="status" id="status" class="form-control">
                    @foreach (var status in ViewBag.StatusList)
                    {
                        <option value="@(status == "All" ? "" : status)" @(ViewBag.SelectedStatus == status ? "selected" : "")>@status</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Apply Filters</button>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary mb-2 ml-2">Reset</a>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Plant</th>
                <th>Area</th>
                <th>Monitoring Type</th>
                <th>Category</th>
                <th>Frequency</th>
                <th>Expiry Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Plant.PlantName</td>
                    <td>@item.Area</td>
                    <td>@item.Monitoring.MonitoringName</td>
                    <td>@item.Monitoring.MonitoringCategory</td>
                    <td>@item.Monitoring.MonitoringFreq</td>
                    <td>
                        @if (item.ExpDate.HasValue)
                        {
                            <span class="@(item.ExpDate < DateTime.Now ? "text-danger" : (item.ExpDate < DateTime.Now.AddDays(30) ? "text-warning" : ""))">
                                @item.ExpDate.Value.ToString("yyyy-MM-dd")
                            </span>
                        }
                    </td>
                    <td>
                        <span class="badge @item.StatusCssClass">@item.Status</span>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a href="@Url.Action("UpdateStatus", new { id = item.Id })" class="btn btn-sm btn-warning">
                                <i class="fas fa-tasks"></i> Update Status
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No records found matching the filter criteria.
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form when select fields change
            $("#category, #plantId, #status").change(function() {
                $(this).closest("form").submit();
            });
        });
    </script>
} 